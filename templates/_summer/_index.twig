{% extends '_layout' %}

{% block color %}style="background-color: #fff"{% endblock %}

{% block content %}

<div class="block">
	<div class="title center">
		<h1 class="title">{{ entry.title|upper }}</h1>
	</div>
	<div class="content">
		<div class="row">
			{% for day in craft.entries.section('summerday') %}
				<div class="col-lg-3">
					<div class="button-center">
						<a href="{{ day.url }}" class="btn btn-primary btn-lg">{{ day.title }}</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>

{% endblock %}